{
  "name": "boredapi",
  "version": "1.2.0",
  "engines": {
    "node": "20.x"
  },
  "description": "A simple and free API to find things to do when you're bored",
  "scripts": {
    "start-dev": "export NODE_ENV=development; node server.js",
    "start": "export NODE_ENV=production; node server.js",
    "test-i": "mocha test/backend/integration --timeout 60000",
    "test-db": "mocha test/db --timeout 60000",
    "test": "npm run test-i && npm run test-db"
  },
  "license": "MIT",
  "_moduleAliases": {
    "@": "./",
    "@b": "./src/backend",
    "@t": "./test",
    "@s": "./scripts"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.19.0",
    "chalk": "^4.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "keen-tracking": "^4.4.1",
    "module-alias": "^2.2.2",
    "mongoose": "^5.9.9"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "ajv": "^6.12.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.5.2",
    "eslint": "^7.0.0",
    "faker": "^4.1.0",
    "html-webpack-plugin": "^4.2.0",
    "mongodb-memory-server": "^6.5.2",
    "sinon": "^9.0.2",
    "webpack": "^4.42.1",
    "webpack-bundle-analyzer": "^3.6.1",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  }
}
